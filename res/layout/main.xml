<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="vertical"	    	
	    android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:layout_weight="1">
		<ProgressBar android:id="@+id/pb1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"/>
		<com.tyj.onepiece.CtrlView android:id="@+id/cv1"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</LinearLayout>
	
	<LinearLayout android:orientation="vertical"	    	
	    android:layout_width="0dip"
		android:layout_height="fill_parent"
		android:layout_weight="1">
		
		<ProgressBar android:id="@+id/pb2" android:layout_width="fill_parent"
				android:layout_height="wrap_content" style="?android:attr/progressBarStyleHorizontal"/>
		<com.tyj.onepiece.CtrlView android:id="@+id/cv2"
			android:layout_width="fill_parent" android:layout_height="fill_parent" />
	</LinearLayout>
</LinearLayout>

